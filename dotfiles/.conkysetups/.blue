######################
# - Conky settings - #
######################
update_interval 1
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1
if_up_strictness link

imlib_cache_size 0
double_buffer yes
no_buffers yes
background yes

format_human_readable

#####################
# - Text settings - #
#####################
use_xft yes
xftfont Liberation Sans:size=8
override_utf8_locale yes
text_buffer_size 4096
#text_buffer_size 2048

#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window yes
own_window_type normal
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 200
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

alignment top_right
gap_x 12
#gap_x 25
gap_y 40
minimum_size 182 600
maximum_width 182

default_bar_size 60 8

#########################
# - Graphics settings - #
#########################
draw_shades yes
stippled_borders 1

default_color 1793d0
color0 white
color1 1793d0 
color2 white
color3 1793d0

TEXT
${font Liberation Sans:style=Bold:size=14}SYSTEM $hr${font}
##############
# - SYSTEM - #
##############
${font Liberation Sans:style=Bold:size=8}${color}CPU ${hr 2}${font Liberation Sans:style=Normal:size=8}
CPU0: ${cpu cpu0}% ${cpubar cpu0}
CPU1: ${cpu cpu1}% ${cpubar cpu1}
CPU2: ${cpu cpu2}% ${cpubar cpu2}
CPU3: ${cpu cpu3}% ${cpubar cpu3}
Temperature ${execi 8 sensors | grep 'Core 0' | cut -c18-24 | sed '/^$/d'}
 
${font Liberation Sans:style=Bold:size=8}${color}MEMORY ${hr 2}
${font Liberation Sans:style=Normal:size=8}RAM $alignc $mem / $memmax $alignr $memperc%
$membar

${font Liberation Sans:style=Bold:size=8}${color}DISKs ${hr 2}
${font Liberation Sans:style=Normal:size=8}Root $alignc ${fs_used /} / ${fs_size /} $alignr${fs_used_perc /}%
${fs_bar /}
Home $alignc ${fs_used /home/shaunchap} / ${fs_size /home/shaunchap} $alignr ${fs_used_perc /home/shaunchap}%
${fs_bar /home/shaunchap}
###############
# - NETWORK - #
###############
